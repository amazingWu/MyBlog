@{
    ViewBag.title = "修改文章";
    Layout = "~/Views/Shared/_admin.cshtml";
}

@Styles.Render("~/TitleCreateCss")
@model DemoLoginBean.Models.Title

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>
<div class="crumb-wrap">
    <div class="crumb-list"><i class="icon-font"></i><a href="index.html">首页</a><span class="crumb-step">&gt;</span><span class="crumb-name">修改博文</span></div>
</div>
<div class="content-wrapper__inner">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>新增文章</legend>

            <div class="editor-label">
                <label>标题：</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.tName)
                @Html.ValidationMessageFor(model => model.tName)

            </div>
            <div class="editor-label">
                <label>标签：</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.tag.Tag1)
                @Html.ValidationMessageFor(model => model.tag.Tag1)
                @Html.EditorFor(model => model.tag.Tag2)
                @Html.ValidationMessageFor(model => model.tag.Tag2)
                @Html.EditorFor(model => model.tag.Tag3)
                @Html.ValidationMessageFor(model => model.tag.Tag3)
                @Html.EditorFor(model => model.tag.Tag4)
                @Html.ValidationMessageFor(model => model.tag.Tag4)
                @Html.EditorFor(model => model.tag.Tag5)
                @Html.ValidationMessageFor(model => model.tag.Tag5)
            </div>
            <div class="editor-label">
                <label>内容：</label>
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.tContent)
                @Html.ValidationMessageFor(model => model.tContent)
            </div>
            <p>
                <input type="submit" class="submit" value="提交" />
            </p>
        </fieldset>
    }
</div>



